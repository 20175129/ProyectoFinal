@model IEnumerable<ProyectoFinalV3.Models.Empleado>

@{
    ViewBag.Title = "Empleados";
}

<h2>Bienvenido al listado de Empleados</h2>
<p>
    @Html.ActionLink("Crear", "Create")
</p>

@using(Html.BeginForm("Index", "Empleados", FormMethod.Get))
{ 
    @Html.TextBox("busqueda") <input type="submit" value="Buscar" />
    @Html.RadioButton("opcion", "Departamento") @Html.Label("Departamento  ") 
    @Html.RadioButton("opcion", "Nombre") @Html.Label("Nombre")
    @Html.RadioButton("opcion", "Activo") @Html.Label("Activo")
    @Html.RadioButton("opcion", "Inactivo") @Html.Label("Inactivo")
    @Html.RadioButton("opcion", "Entrada") @Html.Label("Entrada de empleado por mes")
    @Html.RadioButton("opcion", "Salida") @Html.Label("Salida de empleado por mes")
}
    
<table class="table">
    <tr>
        <th>
            @Html.Label("ID")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.Label("Fecha de Ingreso")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th>
            @Html.Label("Cargo")
        </th>
        <th>
            @Html.Label("Departamento")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cargo1.Cargo1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento1.Departamento1)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Codigo_Empleado }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Codigo_Empleado })
        </td>
    </tr>
}

</table>
